<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Theme -->
    <style name="Theme.MySplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/Blued</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/safes</item>
        <item name="postSplashScreenTheme">@style/Theme.MyApp</item>
    </style>

    <!-- Main App Theme without ActionBar -->
    <style name="Theme.MyApp" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize colors here if needed -->
        <item name="android:statusBarColor">@color/Blued</item>
        <item name="android:navigationBarColor">@color/Blued</item>
    </style>

</resources>

